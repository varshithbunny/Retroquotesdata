<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/ids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_toStartOf="@+id/authors"
            android:layout_toLeftOf="@+id/authors"
            android:padding="6dp"
            android:text="@string/hello_world"
            android:textColor="@color/teal_200"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="3dp"

            android:layout_marginLeft="3dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="3dp"
            android:padding="6dp"
            android:paddingTop="6dp"
            android:text="@string/authors"
            android:textColor="@color/teal_200"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Date_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ids"
            android:layout_margin="3dp"
            android:layout_toStartOf="@+id/authors"
            android:layout_toLeftOf="@+id/Date_mod"
            android:padding="6dp"
            android:text="@string/dateadded"
            android:textColor="@color/teal_200"


            android:textSize="13sp" />

        <TextView
            android:id="@+id/Date_mod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ids"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:padding="6dp"
            android:text="@string/datemodified"
            android:textColor="@color/teal_200"


            android:textSize="13sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Tags"
            android:layout_below="@id/Date_add"
            android:layout_margin="3dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:text="@string/different_tags"
            android:textColor="@color/teal_200"

            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
